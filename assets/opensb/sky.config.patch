      // calculates scale as celestial imageScale / baseSize
      "bySize" : {
        "active" : false,
        "baseSize" : 0.055 // medium imageScale from celestial.config
      },
	  
      // calculates scale based on the orbit of a planet
      // (note that in vanilla planets start spawning from 2nd orbit)
      "byDistance" : {
        "active" : true,
        "maxScale" : 2.2, // scale on the 1st orbit
        "step" : 0.2 // scale decrease with each next orbit
      }
    }
  },
  {
    "op": "add",
    "path": "/sun/dynamicBrightness",
    "value": {
	
      // calculated as a multplier based on size and distance scaling:
      // (imageScale / baseSize) * (maxScale - ((orbit - 1) * step)) * intensity
      // recommended to be close to 1.0 at 6th orbit (assuming that imageScale / baseSize = 1)
      "bySize" : false,
      "byDistance" : {
        "active" : true,
        "intensity" : 1 // adjust brightness if distance scaling values are very low/high
      }
    }
